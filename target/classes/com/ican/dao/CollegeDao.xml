<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ican.dao.UserDao">

    <sql id="dynamicWhere">
        <where>
            <if test="_parameter.containsKey('ids') and ids != null and ids != ''">
                and id in (${ids})
            </if>
            <if test="_parameter.containsKey('email') and email != ''">
                and email =#{email}
            </if>
            <if test="_parameter.containsKey('name') and name != ''">
                and name =#{name}
            </if>
        </where>
    </sql>

    <select id="select" resultType="com.ican.model.User">
        select * from t_user where id=#{id}
    </select>

    <select id="count" resultType="int">
        select count(*) from t_user
        <include refid="dynamicWhere" />
    </select>

    <select id="list" resultType="com.ican.model.User">
        select * from t_user
        <include refid="dynamicWhere" />
        <if test="_parameter.containsKey('order') and order!=null">
            order by ${order}
        </if>
        limit #{start},#{size}
    </select>

    <insert id="insert" parameterType="com.ican.model.User" useGeneratedKeys="true" keyProperty="id">
        insert into t_user (email,name,password)
        values (#{email},#{name},#{password})
    </insert>

    <update id="update" parameterType="com.ican.model.User">
        update t_user
        <set>
            <if test="email != null">
                email=#{email},
            </if>
            <if test="name != null">
                name=#{name},
            </if>
            <if test="password != null">
                password=#{password},
            </if>
        </set>
        where id=#{id}
    </update>

    <update id="delete">
        delete from t_user where id=#{id}
    </update>

</mapper>