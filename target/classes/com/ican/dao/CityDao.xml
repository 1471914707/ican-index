<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ican.dao.CityDao">

    <sql id="dynamicWhere">
        <where>
            <if test="_parameter.containsKey('ids') and ids != null and ids != ''">
                and id in (${ids})
            </if>
            <if test="_parameter.containsKey('type') and type >= 0">
                and type =#{type}
            </if>
            <if test="_parameter.containsKey('parentId') and parentId >= 0">
                and parent_id =#{parentId}
            </if>
        </where>
    </sql>

    <select id="select" resultType="com.ican.model.City">
        select * from city where id=#{id}
    </select>

    <select id="count" resultType="int">
        select count(*) from city
        <include refid="dynamicWhere" />
    </select>

    <select id="list" resultType="com.ican.model.City">
        select * from city
        <include refid="dynamicWhere" />
        <if test="_parameter.containsKey('order') and order!=null">
            order by ${order}
        </if>
        limit #{start},#{size}
    </select>

    <insert id="insert" parameterType="com.ican.model.City" useGeneratedKeys="true" keyProperty="id">
        insert into city (parent_id,name,name_en,first,type,gmt_create,gmt_modified)
        values (#{parentId},#{name},#{nameEn},#{first},#{type},now(),now())
    </insert>

    <update id="update" parameterType="com.ican.model.City" useGeneratedKeys="true" keyProperty="id">
        update city
        <set>
            <if test="parentId != null">
                parent_id=#{parentId},
            </if>
            <if test="name != null">
                name=#{name},
            </if>
            <if test="nameEn != null">
                name_en=#{nameEn},
            </if>
            <if test="first != null">
                first=#{first},
            </if>
            <if test="type != null">
                type=#{type},
            </if>
            <if test="true">
                gmt_modified=now(),
            </if>
        </set>
        where id=#{id}
    </update>

    <update id="delete">
        delete from city where id=#{id}
    </update>

</mapper>