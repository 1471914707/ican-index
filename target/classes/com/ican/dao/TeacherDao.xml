<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ican.dao.TeacherDao">

    <sql id="dynamicWhere">
        <where>
            <if test="_parameter.containsKey('ids') and ids != null and ids != ''">
                and id in (${ids})
            </if>
            <if test="_parameter.containsKey('userId') and userId != 0">
                and user_id = #{userId}
            </if>
            <if test="_parameter.containsKey('phone') and phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="_parameter.containsKey('email') and email != null and email != ''">
                and email = #{email}
            </if>
            <if test="_parameter.containsKey('jobId') and jobId != null and jobId != ''">
                and job_id LIKE contact(#{jobId}, '%')
            </if>
            <if test="_parameter.containsKey('degree') and degree != 0">
                and degree = #{degree}
            </if>
        </where>
    </sql>

    <select id="select" resultType="com.ican.model.Teacher">
        select * from teacher where id=#{id}
    </select>

    <select id="count" resultType="int">
        select count(*) from teacher
        <include refid="dynamicWhere" />
    </select>

    <select id="list" resultType="com.ican.model.Teacher">
        select * from teacher
        <include refid="dynamicWhere" />
        <if test="_parameter.containsKey('order') and order!=null">
            order by ${order}
        </if>
        limit #{start},#{size}
    </select>

    <insert id="insert" parameterType="com.ican.model.Teacher" useGeneratedKeys="true" keyProperty="id">
        insert into teacher (user_id,phone,email,job_id,degree,degreeName,gmt_create,gmt_modified)
        values (#{userId},#{phone},#{email},#{job_id},#{degree},#{degreeName},now(),now())
    </insert>

    <update id="update" parameterType="com.ican.model.Teacher">
        update teacher
        <set>
            <if test="userId != 0">
                user_id=#{userId},
            </if>
            <if test="phone != null">
                phone=#{phone},
            </if>
            <if test="email != null">
                email=#{email},
            </if>
            <if test="name != null">
                name=#{name},
            </if>
            <if test="true">
                gmt_modified=now()
            </if>
        </set>
            where id=#{id}
    </update>

    <update id="delete">
        delete from teacher where id=#{id}
    </update>

</mapper>