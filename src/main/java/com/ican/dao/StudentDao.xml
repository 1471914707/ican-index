<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ican.dao.StudentDao">

    <sql id="dynamicWhere">
        <where>
            <if test="_parameter.containsKey('ids') and ids != null and ids != ''">
                and id in (${ids})
            </if>
            <if test="_parameter.containsKey('userId') and userId != 0">
                and user_id = #{userId}
            </if>
            <if test="_parameter.containsKey('schoolId') and schoolId != 0">
                and school_id = #{schoolId}
            </if>
            <if test="_parameter.containsKey('collegeId') and collegeId != 0">
                and college_id = #{collegeId}
            </if>
            <if test="_parameter.containsKey('departmentId') and departmentId != 0">
                and department_id = #{departmentId}
            </if>
            <if test="_parameter.containsKey('current') and current != 0">
                and current = #{current}
            </if>
            <if test="_parameter.containsKey('jobId') and jobId != null and jobId != ''">
                and job_id = #{jobId}
            </if>
            <if test="_parameter.containsKey('phone') and phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="_parameter.containsKey('email') and email != null and email != ''">
                and email = #{email}
            </if>
        </where>
    </sql>

    <select id="select" resultType="com.ican.model.Student">
        select * from student where id=#{id}
    </select>

    <select id="count" resultType="int">
        select count(*) from student
        <include refid="dynamicWhere" />
    </select>

    <select id="list" resultType="com.ican.model.Student">
        select * from student
        <include refid="dynamicWhere" />
        <if test="_parameter.containsKey('order') and order!=null">
            order by ${order}
        </if>
        limit #{start},#{size}
    </select>

    <insert id="insert" parameterType="com.ican.model.Student" useGeneratedKeys="true" keyProperty="id">
        insert into student (user_id,school_id,college_id,department_id,clazz_id,teacher_id,current,phone,email,job_id,gmt_create,gmt_modified)
        values (#{userId},#{schoolId},#{collegeId},#{departmentId},#{clazzId},#{teacherId},#{current},#{phone},#{email},#{jobId},now(),now())
    </insert>

    <update id="update" parameterType="com.ican.model.Student">
        update student
        <set>
            <if test="userId != 0">
                user_id=#{userId},
            </if>
            <if test="schoolId != 0">
                school_id=#{schoolId},
            </if>
            <if test="collegeId != 0">
                college_id=#{collegeId},
            </if>
            <if test="departmentId != 0">
                department_id=#{departmentId},
            </if>
            <if test="clazzId != 0">
                clazz_id=#{clazzId},
            </if>
            <if test="teacherId != 0">
                teacher_id=#{teacherId},
            </if>
            <if test="current != 0">
                current=#{current},
            </if>
            <if test="phone != null">
                phone=#{phone},
            </if>
            <if test="email != null">
                email=#{email},
            </if>
            <if test="jobId != null">
                job_id=#{jobId},
            </if>
            <if test="true">
                gmt_modified=now(),
            </if>
        </set>
        where id=#{id}
    </update>

    <update id="delete">
        delete from student where id=#{id}
    </update>

</mapper>