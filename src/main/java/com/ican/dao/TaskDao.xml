<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ican.dao.TaskDao">

    <sql id="dynamicWhere">
        <where>
            <if test="_parameter.containsKey('ids') and ids != null and ids != ''">
                and id in (${ids})
            </if>
            <if test="_parameter.containsKey('activityId') and activityId > 0">
                and activity_id = #{activityId}
            </if>
            <if test="_parameter.containsKey('ownerId') and ownerId > 0">
                and owner_id = #{ownerId}
            </if>
            <if test="_parameter.containsKey('executorId') and executorId > 0">
                and executor_id = #{executorId}
            </if>
            <if test="_parameter.containsKey('teacherId') and teacherId > 0">
                and teacher_id = #{teacherId}
            </if>
            <if test="_parameter.containsKey('projectId') and projectId > 0">
                and project_id = #{projectId}
            </if>
            <if test="_parameter.containsKey('studentId') and studentId > 0">
                and student_id = #{studentId}
            </if>
        </where>
    </sql>

    <select id="select" resultType="com.ican.domain.Task">
        select * from task where id=#{id}
    </select>

    <select id="count" resultType="int">
        select count(*) from task
        <include refid="dynamicWhere" />
    </select>

    <select id="list" resultType="com.ican.domain.Task">
        select * from task
        <include refid="dynamicWhere" />
        <if test="_parameter.containsKey('order') and order!=null">
            order by ${order}
        </if>
        limit #{start},#{size}
    </select>

    <insert id="insert" parameterType="com.ican.domain.Task" useGeneratedKeys="true" keyProperty="id">
        insert into task (activity_id,owner_id,executor_id,teacher_id,student_id,project_id,title,content,start_time,end_time,parent_id,accept,gmt_create,gmt_modified)
        values (#{activityId},#{ownerId},#{executorId},#{teacherId},#{studentId},#{projectId},#{title},#{content},#{startTime},#{endTime},#{parentId},#{accept},now(),now())
    </insert>

    <update id="update" parameterType="com.ican.domain.Task">
        update task
        <set>
            <if test="activityId != 0">
                activity_id=#{activityId},
            </if>
            <if test="ownerId != 0">
                ownerId=#{ownerId},
            </if>
            <if test="executorId != 0">
                executor_id=#{executorId},
            </if>
            <if test="teacherId != 0">
                teacher_id=#{teacherId},
            </if>
            <if test="studentId != 0">
                student_id=#{studentId},
            </if>
            <if test="projectId != 0">
                project_id=#{projectId},
            </if>
            <if test="title != null">
                title=#{title},
            </if>
            <if test="content != null">
                content=#{content},
            </if>
            <if test="startTime != null">
                start_time=#{startTime},
            </if>
            <if test="endTime != null">
                end_time=#{endTime},
            </if>
            <if test="parentId != 0">
                parent_id=#{parentId},
            </if>
            <if test="accept != 0">
                accept=#{accept},
            </if>
            <if test="true">
                gmt_modified=now(),
            </if>
        </set>
        where id=#{id}
    </update>

    <update id="delete">
        delete from task where id=#{id}
    </update>

</mapper>