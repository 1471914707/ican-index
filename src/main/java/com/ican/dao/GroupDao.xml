<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ican.dao.GroupsDao">

    <sql id="dynamicWhere">
        <where>
            <if test="_parameter.containsKey('ids') and ids != null and ids != ''">
                and id in (${ids})
            </if>
            <if test="_parameter.containsKey('projectIds') and projectIds > 0">
                and project_ids in (${projectIds})
            </if>
            <if test="_parameter.containsKey('name') and name != null and name != ''">
                and name LIKE concat(#{name},'%')
            </if>
            <if test="_parameter.containsKey('activityId') and activityId > 0">
                and activity_id = #{activityId}
            </if>
            <if test="_parameter.containsKey('userId') and userId > 0">
                and user_id = #{userId}
            </if>
        </where>
    </sql>

    <select id="select" resultType="com.ican.domain.Groups">
        select * from groups where id=#{id}
    </select>

    <select id="count" resultType="int">
        select count(*) from groups
        <include refid="dynamicWhere" />
    </select>

    <select id="list" resultType="com.ican.domain.Groups">
        select * from groups
        <include refid="dynamicWhere" />
        <if test="_parameter.containsKey('order') and order!=null">
            order by ${order}
        </if>
        limit #{start},#{size}
    </select>

    <insert id="insert" parameterType="com.ican.domain.Groups" useGeneratedKeys="true" keyProperty="id">
        insert into groups (activity_id,user_id,name,project_ids,gmt_create,gmt_modified)
        values (#{activityId},#{userId},#{name},#{projectIds},now(),now())
    </insert>

    <update id="update" parameterType="com.ican.domain.Groups">
        update groups
        <set>
            <if test="activityId != 0">
                activity_id=#{activityId},
            </if>
            <if test="userId != 0">
                user_id=#{userId},
            </if>
            <if test="name != null">
                name=#{name},
            </if>
            <if test="project_ids != 0">
                projectIds=#{project_ids},
            </if>
            <if test="true">
                gmt_modified=now(),
            </if>
        </set>
        where id=#{id}
    </update>

    <update id="delete">
        delete from groups where id=#{id}
    </update>

</mapper>